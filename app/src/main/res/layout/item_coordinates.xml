<?xml version="1.0" encoding="utf-8"?>

<com.example.arquitectura_clean_mvvm.custom.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    style="@style/SwipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/center_bg">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#009688"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="PRUEBLA"
        app:layout_constraintEnd_toStartOf="@+id/imgArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        android:text="29.03.2020"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

    <ImageView
        android:layout_marginEnd="16dp"
        android:id="@+id/imgArrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>

<!--RIGHT-->
<LinearLayout
        android:id="@+id/right_view"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:bring_to_clamp="150dp"
        app:clamp="self"
        app:gravity="right"
        app:sticky="100dp">

    <LinearLayout
        android:background="@color/colorRed"
        android:gravity="center"
        android:layout_width="70dp"
        android:layout_height="match_parent">

        <ImageView
            android:backgroundTint="@null"
            android:src="@drawable/delete_icon_b"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>


    <LinearLayout
        android:background="@color/colorGreen"
        android:gravity="center"
        android:layout_width="70dp"
        android:layout_height="match_parent">

        <TextView
            android:text="Share"
            style="@style/RightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>

<!--LEFT-->
<LinearLayout
    android:gravity="center"
    android:id="@+id/left_view"
    android:layout_width="70dp"
    android:layout_height="match_parent"
    android:background="@color/left_bg"
    app:bring_to_clamp="100dp"
    app:clamp="self"
    app:gravity="left"
    app:sticky="none">

    <ImageView
        android:id="@+id/imgSelected"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

</LinearLayout>

</com.example.arquitectura_clean_mvvm.custom.SwipeLayout>